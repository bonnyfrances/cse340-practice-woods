<%- include('../partials/header') %>
<main>
    <h1>Departments Catalog</h1>
    <p>Browse our departments to see available courses and click on any course to see detailed information including available sections and instructors.</p>

    <div class="course-list">
        <% Object.entries(departments).forEach(([key, courses]) => { %>
            <div class="course-card">
                <h2><%= key %></h2>
                <% Object.values(courses).forEach(course => { %>
                    <div class="course-card">
                        <h3><a href="/catalog/<%= course.id %>"><%= course.title %></a></h3>
                        <p class="course-id"><%= course.id %> â€¢ <%= course.credits %> credits</p>
                        <p class="course-description"><%= course.description %></p>
                    </div>
                <% }); %>
            </div>
        <% }); %>
    </div>
</main>
<%- include('../partials/footer') %>